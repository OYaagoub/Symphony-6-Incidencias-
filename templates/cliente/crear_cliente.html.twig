
{% extends 'base.html.twig' %}
{% block head %}
<title>Crear Cliente</title>

{% endblock %}
{% block content %}
    <div class="container mx-auto mt-8">
    <h1 class="text-2xl font-bold mb-4">Crear Cliente</h1>

    <form action="{{ path('crear_cliente') }}" method="post" class="max-w-md mx-auto">
        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.nombre, 'Nombre', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.nombre, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            {{ form_errors(form.nombre) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.apellidos, 'Apellidos', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.apellidos, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            {{ form_errors(form.apellidos) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.tel, 'Teléfono', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.tel, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            {{ form_errors(form.tel) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.direccion, 'Dirección', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.direccion, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            {{ form_errors(form.direccion) }}
        </div>

        <div class="mt-6">
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md">Guardar</button>
        </div>

        {{ form_end(form) }}
    </form>
</div>

{% endblock %}